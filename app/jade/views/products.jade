.row-fluid
    legend
        h2 Productos
.row-fluid
    .span10
        p.muted
            |Cantidad de productos: {{products.length}}
    .span2
        br
        a(class="btn-success btn-large", href='#/addUser')
            i(class="icon-plus icon-white")
            |&nbsp; Usuario

