.row
    table#tableUser(class="table table-hover", cellpaddin="0", cellspacing="0")
        thead
            th
                strong Producto
            th
                strong Descripcion
            th
                strong Locacion
            th
                strong Vendedor
            th
                strong Precio
            th
                strong Disponibles
        tbody
            tr(ng-repeat='product in products | filter:query')
                td {{product.name}}
                td {{product.description}}
                td {{product.location}}
                td {{product.user}}
                td {{product.price}}
                td {{product.stock}}
                td
                    a(class="btn btn-warning", href="#/product_edit/{{product._id}}")
                        i(class="icon-pencil icon-white")
                td
                    a(class="btn btn-danger",bs-popover="/partials/deleteUser",data-title="{{product.name}}",data-placement="left")
                        i(class="icon-remove-circle icon-white")